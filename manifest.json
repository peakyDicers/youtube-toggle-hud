{
    "name": "Youtube Toggle Hud",
    "version": "0.0.0.666",
    "description": "Toggle the HUD on youtube videos.",
    "manifest_version": 2,
    "content_scripts":[
        {
            "matches": [
                "https://www.youtube.com/watch*"
            ],
            "js": [
                "content.js"
            ],
            "css":[
                "hide.css"
            ]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action":{
        "default_icon": "icon.png"
    },
    "permissions": [
        "tabs"
      ]
}