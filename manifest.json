{
    "name": "youtube-toggle-hud",
    "version": "1.0",
    "description": "Build an Extension!",
    "manifest_version": 2,
    "content_scripts":[
        {
            "matches": [
                "https://www.youtube.com/watch*"
            ],
            "js": [
                "content.js"
            ],
            "css":[
                "hide.css"
            ]
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action":{
        "default_icon": "icon.png"
    },
    "permissions": [
        "tabs"
      ]
}